@model SaldoModel;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-6 mb-5">Controle Financeiro Básico</h1>

    <div class="row">
        <div class="col-4">
            <div class="card text-white bg-success mb-3" style="max-width: 18rem;">
                <div class="card-header">Receitas</div>
                <div class="card-body">
                    <h5 class="card-title">@Model.Receitas.ToString("c2")</h5>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card text-white bg-danger mb-3" style="max-width: 18rem;">
                <div class="card-header">Despesas</div>
                <div class="card-body">
                    <h5 class="card-title">@Model.Despesas.ToString("c2")</h5>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card text-dark bg-info mb-3" style="max-width: 18rem;">
                <div class="card-header">Saldo</div>
                <div class="card-body">
                    <h5 class="card-title">@Model.Saldo.ToString("c2")</h5>                    
                </div>
            </div>
        </div>
    </div>
</div>

